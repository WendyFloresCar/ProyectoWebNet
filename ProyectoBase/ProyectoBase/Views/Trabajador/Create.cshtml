@model Trabajador
@{
    ViewData["Title"] = "Create";
}

<form id="formCreateTrabajadores">
    <input type="hidden" asp-for="idTrabajador" />
    <input type="hidden" asp-for="fechaCreacion" />
    <input type="hidden" asp-for="horaCreacion" />
    <input type="hidden" asp-for="estado" />
    <div class="row">
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Nombres</label>
            <input type="text" asp-for="nombres" class="form-control" required />
        </div>
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Apellidos</label>
            <input type="text" asp-for="apellidos" class="form-control" required />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Tipo de documento</label>
            <select asp-for="tipoDocumento" class="form-control" asp-items="ViewBag.cmbTipoDocumento"></select>
        </div>
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>N° Documento</label>
            <input type="text" asp-for="numeroDocumento" class="form-control" required />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Dirección</label>
            <input type="text" asp-for="direccion" class="form-control" required />
        </div>
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Correo</label>
            <input type="text" asp-for="correo" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Empresa</label>
            <select asp-for="idEmpresa" class="form-control" asp-items="ViewBag.cmbEmpresas"></select>
        </div>
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Fecha de Nacimiento</label>
            <input type="date" name="fechaNacimiento" value="@Model.fechaNacimiento.ToString("yyyy-MM-dd")" class="form-control" required />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 mb-1 pb-1">
            <label>Estado Civil</label>
            <div class="d-flex">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="estadoCivil" value="S">
                    <label class="form-check-label" for="inlineRadio1">Soltero</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="estadoCivil" value="C">
                    <label class="form-check-label" for="inlineRadio2">Casado</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="estadoCivil" value="V">
                    <label class="form-check-label" for="inlineRadio3">Viudo</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-end">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <a class="btn btn-primary" onclick="ValidarInformacion()">Guardar</a>
        </div>
    </div>
</form>